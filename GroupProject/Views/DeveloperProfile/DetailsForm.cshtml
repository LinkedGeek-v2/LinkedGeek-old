@model GroupProject.ViewModels.DeveloperDetailsViewModel
<div id="Details">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close fa fa-times" data-dismiss="modal"></button>
                <h4 id="detailsFormTitle" class="modal-title">Personal Details</h4>
            </div>
            <div class="modal-body">
                <form id="DetailsForm">
                    <div class="form-group">
                        @Html.LabelFor(det => det.FirstName)
                        @Html.TextBoxFor(det => det.FirstName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(det => det.FirstName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(det => det.LastName)
                        @Html.TextBoxFor(det => det.LastName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(det => det.LastName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.DateOfBirth)
                        <input class="form-control valid" data-val="true" id="DateOfBirth" name="DateOfBirth" type="date" value="@(Model.DateOfBirth.HasValue ? Model.DateOfBirth.Value.ToString("yyyy-MM-dd") :"" )">
                        @Html.ValidationMessageFor(m => m.DateOfBirth, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(ex => ex.Gender)
                        @Html.EnumDropDownListFor(ex => ex.Gender, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button class="btn btn-primary submit-profile-page-forms" value="2">Save</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        </div>
                    </div>

                </form>
            </div>

        </div>
    </div>
</div>


@Scripts.Render("~/bundles/jqueryval")
