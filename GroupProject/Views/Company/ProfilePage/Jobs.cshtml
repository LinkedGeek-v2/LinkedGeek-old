@model GroupProject.ViewModels.CompanyViewModels.JobGetViewModel

<div>
    <ul id="jobs-list" class="list-group">
        @foreach (var job in Model.Jobs)
        {
            <li class="list-group-item row">
                <span>@job.JobTitle</span>
                <button id="@job.JobID" class="btn btn-sm btn-danger delete-btn" style="float: right">Delete</button>
            </li>
        }
    </ul>
    <button class="btn btn-primary post-btn" style="float: right;" data-toggle="modal" data-target="#jobModal">Post a Job</button>
</div>
<div id="jobModal" class="modal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close form-close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Post Job</h4>
            </div>

            <div class="modal-body">
                <form id="jobsPosted-form">
                    <div class="form-group">
                        <input type="hidden" name="companyID" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" name="jobTitle" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Description</label>
                        <input type="text" name="jobDescription" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Type</label>
                        <input list="jobTypes" name="jobType" class="form-control" />
                        <datalist id="jobTypes">
                            @foreach (var type in Model.JobTypes)
                            {
                                <option>@type</option>
                            }
                        </datalist>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success submit-btn">Save</button>
                        <button class="btn btn-danger form-close" data-dismiss="modal">Back</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jqueryval")