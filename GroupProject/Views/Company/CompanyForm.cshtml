@model GroupProject.Models.CompanyModels.Company

<h2>Welcome!</h2>

@using (Html.BeginForm("CreateCompany", "Company", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div>
        <div class="form-group">
            @Html.LabelFor(model => model.CompanyName)
            @Html.EditorFor(model => model.CompanyName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FoundationDate)
            @Html.EditorFor(model => model.FoundationDate, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FoundationDate, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FounderName)
            @Html.EditorFor(model => model.FounderName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FounderName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description)
            @Html.EditorFor(model => model.Description, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
}

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}